<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ytun.walkie_stalkie.FBActivity">

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Stalk!"-->
    <!--android:id="@+id/textView" />-->

    <Button
        android:id="@+id/stalk_btn"
        android:text="Stalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_edtxt"
        android:layout_alignBottom="@+id/search_edtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="272dp" />

    <EditText
        android:id="@+id/search_edtxt"
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:hint="Enter a name"
        android:inputType="textCapWords"
        android:imeOptions="actionSearch"
        android:background="#80ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/stalk_btn"
        android:layout_toStartOf="@+id/stalk_btn"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="16dp" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/stalk_btn"
        android:layout_centerHorizontal="true"
        android:weightSum="1">


        <RelativeLayout
            android:id="@+id/result_layout1"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/name1_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="30dp"
                android:layout_weight="0.3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/detail1_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="30dp"
                android:layout_weight="0.7"
                android:layout_below="@+id/name1_txtv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/profileImage1"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/name1_txtv" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/result_layout2"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/name2_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/detail2_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:layout_below="@+id/name2_txtv"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/profileImage2"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/name2_txtv" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/result_layout3"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/name3_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/detail3_txtv"
                android:text=""
                android:layout_width="182dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:layout_below="@+id/name3_txtv"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/profileImage3"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/name3_txtv" />

        </RelativeLayout>


        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Log Out"
            android:layout_weight="0.04" />
    </LinearLayout>


</RelativeLayout>
